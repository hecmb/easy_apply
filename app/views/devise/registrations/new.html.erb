<div style="text-align:center;margin:0px auto; width:100%;"%>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
</br>
  <div class="field">

    <p><b> Are You an Applicant or Employer? </b></p>
    <ul style="list-style-type:none;">
      <li><p><b>Applicant <%= f.check_box :applicant %></b></p></li>
      <li><p><b>Employer <%= f.check_box :employer %></b></p></li>
    <ul>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</br>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-default" %>
  </div>
  </br>

<% end %>

<%= render "devise/shared/links" %>
</div>